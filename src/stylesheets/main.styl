button
  font inherit
  text-transform inherit
  color inherit
  background none
  border none
  padding 0
  margin-right 10px
  cursor pointer
  &.selected
    color #E8E4D5
  &:active
    color white

.serial
  margin-top 5px
  .port
    font-size 0.5em
    display block

.question
  transform translateY(0px)
  width 3.5in
  height 2in
  background #E8E4D5
  color #615445
  box-shadow 10px 10px 0 0 rgba(0,0,0,0.2)
  transition 0.5s background, 0.5s color, 0.5s ease-out opacity, 0.5s ease-out transform, 0.5s ease-out box-shadow
  position relative
  overflow hidden
  &::after
      content ''
      opacity 0.2
      font-weight 100
      font-size 36px
      position absolute
      right 15px
      bottom -2em
      transition 0.5s bottom, 0.5s opacity
  &.yes
    background #76D68E
    color #FFF8C3
    &::after
      content 'Yes.'
      opacity 1
      bottom 15px
  &.no
    background #E8826D
    color #9F5038
    &::after
      content 'No.'
      opacity 1
      bottom 15px
  &.hidden
    transform translateY(50px)
    opacity 0
    box-shadow 0px 0px 0 0 rgba(0,0,0,0.2)
    transition 0.5s ease-out opacity, 0.5s ease-out transform, 0.5s ease-out box-shadow

  .text
    width 50%
    font-weight 100
    font-size 24px
    margin 15px
