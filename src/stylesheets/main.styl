*
  outline none
  &:active
    outline none

body
  background #33332C
  color #555
  font-family 'Roboto','Helvetica Neue', 'Helvetica', sans-serif

h1,h2
  font-weight 200
  font-size 24pt
  margin 0
  text-transform uppercase

p
  margin 0
  font-size 0.5em
  color #AAA

